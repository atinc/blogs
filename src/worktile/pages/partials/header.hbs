<header class="wt-header" uk-sticky>
  <nav class="wp uk-navbar-container uk-navbar-transparent" uk-navbar>
    <div class="uk-navbar-left">
      {{#if @site.logo}}
      <a href="{{@site.url}}" class="wt-logo uk-navbar-item uk-logo uk-padding-remove">
        <!-- <img src="{{@site.logo}}" alt="{{@site.title}}"> -->
        {{!-- <img src="{{asset "images/logo.svg" }}" alt="" srcset="" /> --}}
        <img class="uk-preserve" src="https://cdn.worktile.com/assets/images/next/logo/logo.svg " uk-svg>
      </a>
      {{else}}
      <a href="{{@site.url}}" class="wt-logo uk-navbar-item uk-logo uk-padding-remove">
        {{@site.title}}
      </a>
      {{/if}}
      <div id="logo-switch" tabindex="0" hidefocus="true" class="arrow-down-circle-box" data-v-c03487ca>
          <a href="javascript:" class="arrow-down-circle">
              <svg class="svg-icon arrow-down-circle hover-rotate" version="1.1" xmlns="http://www.w3.org/2000/svg"
                   xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 10.1 5.3"
                   style="enable-background:new 0 0 10.1 5.3;" xml:space="preserve">
